@using Kore.Web
@{
    Layout = KoreWebConstants.DefaultAdminLayoutPath;

    Style.IncludeBundle("kendo-ui");

    Script.IncludeBundle("kendo-ui");
    Script.IncludeBundle("knockout");
    Script.IncludeBundle("notify");

    Script.IncludeBundle("kore/common");
    Script.IncludeBundle("kore/section-switching");
    Script.IncludeBundle("kore-web/log");

    string rtlClass = IsRightToLeft ? "k-rtl" : string.Empty;
}

<div id="grid-section" class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <a data-bind="click: clear" class="btn btn-warning">
            <i class="kore-icon kore-icon-warning"></i>
            @T(KoreWebLocalizableStrings.General.Clear)
        </a>
    </div>

    <div class="clearfix"></div>
    <br />

    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 @rtlClass">
        <div id="Grid"></div>
    </div>
</div>
<div id="details-section" class="row" style="display:none">
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>@T(KoreWebLocalizableStrings.Log.Model.EventDateTime)</th>
                <td data-bind="text: eventDateTime"></td>
            </tr>
            <tr>
                <th>@T(KoreWebLocalizableStrings.Log.Model.EventLevel)</th>
                <td data-bind="text: eventLevel"></td>
            </tr>
            <tr>
                <th>@T(KoreWebLocalizableStrings.Log.Model.UserName)</th>
                <td data-bind="text: userName"></td>
            </tr>
            <tr>
                <th>@T(KoreWebLocalizableStrings.Log.Model.MachineName)</th>
                <td data-bind="text: machineName"></td>
            </tr>
            <tr>
                <th>@T(KoreWebLocalizableStrings.Log.Model.EventMessage)</th>
                <td data-bind="text: eventMessage"></td>
            </tr>
            <tr>
                <th>@T(KoreWebLocalizableStrings.Log.Model.ErrorSource)</th>
                <td data-bind="text: errorSource"></td>
            </tr>
            <tr>
                <th>@T(KoreWebLocalizableStrings.Log.Model.ErrorClass)</th>
                <td data-bind="text: errorClass"></td>
            </tr>
            <tr>
                <th>@T(KoreWebLocalizableStrings.Log.Model.ErrorMethod)</th>
                <td data-bind="text: errorMethod"></td>
            </tr>
            <tr>
                <th>@T(KoreWebLocalizableStrings.Log.Model.ErrorMessage)</th>
                <td data-bind="text: errorMessage"></td>
            </tr>
            <tr>
                <th>@T(KoreWebLocalizableStrings.Log.Model.InnerErrorMessage)</th>
                <td data-bind="text: innerErrorMessage"></td>
            </tr>
        </tbody>
    </table>
    <div class="clearfix"></div>
    <br />
    <div class="pull-right">
        <button type="button" class="btn btn-default" data-bind="click: cancel">@T(KoreWebLocalizableStrings.General.Cancel)</button>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        var gridPageSize = @SiteSettings.DefaultGridPageSize;
        var translations = {
            ClearConfirm: '@T(KoreWebLocalizableStrings.Log.ClearConfirm).Text',
            ClearError: '@T(KoreWebLocalizableStrings.Log.ClearError).Text',
            ClearSuccess: '@T(KoreWebLocalizableStrings.Log.ClearSuccess).Text',
            Delete: '@T(KoreWebLocalizableStrings.General.Delete).Text',
            DeleteRecordConfirm: '@T(KoreWebLocalizableStrings.General.ConfirmDeleteRecord).Text',
            DeleteRecordError: '@T(KoreWebLocalizableStrings.General.DeleteRecordError).Text',
            DeleteRecordSuccess: '@T(KoreWebLocalizableStrings.General.DeleteRecordSuccess).Text',
            GetRecordError: '@T(KoreWebLocalizableStrings.General.GetRecordError).Text',
            View: '@T(KoreWebLocalizableStrings.General.View).Text',

            Columns: {
                EventLevel: '@T(KoreWebLocalizableStrings.Log.Model.EventLevel).Text',
                EventMessage: '@T(KoreWebLocalizableStrings.Log.Model.EventMessage).Text',
                EventDateTime: '@T(KoreWebLocalizableStrings.Log.Model.EventDateTime).Text'
            }
        }
    </script>
}