                    <th></th>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody data-bind="foreach: items">
                <tr>
                    <td><img class="img-responsive" data-bind="attr: { src: imageUrl }" style="max-height:180px" /></td>
                    <td data-bind="text: productName"></td>
                    <td data-bind="text: currencyCode + ' ' + price().toFixed(2)"></td>
                    <td data-bind="text: quantity"></td>
                </tr>
            </tbody>
        </table>
        <a href="javascript:void(0);" class="btn btn-success" data-bind="click: confirm">
            <i class="kore-icon kore-icon-ok"></i>
            Confirm
        </a>
    </article>
</div>
