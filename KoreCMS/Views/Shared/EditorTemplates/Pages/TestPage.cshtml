@model KoreCMS.Models.Pages.TestPage

<div id="fields-content" class="col-sm-12 col-md-12">
    <div class="form-group">
        @Html.Label("TestProperty", "Body Content", new { @class = "control-label" })
        @Html.TextBox("TestProperty", null, new { @class = "form-control", data_bind = "value: testProperty" })
    </div>
</div>

<script type="text/javascript">
    function updateModel() {
        viewModel.pageType.testProperty = ko.observable("");

        var data = ko.mapping.fromJSON(viewModel.pageType.fields());

        if (data && data.TestProperty) {
            viewModel.pageType.testProperty(data.TestProperty());
        }
    };

    function cleanUp() {
        delete viewModel.pageType.testProperty;
    }

    function onBeforeSave() {
        var data = {
            TestProperty: viewModel.pageType.testProperty()
        };

        viewModel.pageType.fields(ko.mapping.toJSON(data));
    };
</script>