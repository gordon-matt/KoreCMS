@using Kore.Plugins.Widgets.Bootstrap3.FormBuilder
@using Kore.Plugins.Widgets.Bootstrap3.FormBuilder.ContentBlocks
@model FormBuilderBlock

<link href="/Plugins/Widgets.Bootstrap3.FormBuilder/Content/custom.css?v=2" rel="stylesheet" />

<div id="block-content">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="panel panel-default">
            <div class="row">
                <div class="col-md-6">
                    <div class="clearfix">
                        <h2>Your Form</h2>
                        <hr>
                        <div id="build">
                            <form id="target" class="form-horizontal"></form>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <h2>Drag & Drop components</h2>
                    <hr>
                    <div class="tabbable">
                        <ul class="nav nav-tabs" id="formtabs"></ul>
                        <form id="components" class="form-horizontal">
                            <fieldset>
                                <div class="tab-content">
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="form-group">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                @Html.LabelFor(m => m.ThankYouMessage, new { @class = "control-label" })
                @Html.TextAreaFor(m => m.ThankYouMessage, new { @class = "form-control", data_bind = "wysiwyg: blockModel.thankYouMessage, wysiwygConfig: blockModel.tinyMCEConfig" })
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
        <div class="form-group">
            @Html.LabelFor(m => m.RedirectUrl, new { @class = "control-label col-xs-12 col-sm-4 col-md-3 col-lg-3" })
            <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                @Html.TextBoxFor(m => m.RedirectUrl, new { @class = "form-control", data_bind = "value: blockModel.redirectUrl" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-12 col-sm-4 col-md-3 col-lg-3"></label>
            <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(m => m.UseAjax, new { data_bind = "checked: blockModel.useAjax" }) @T(LocalizableStrings.ContentBlocks.FormBuilderBlock.UseAjax)
                    </label>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
        <div class="form-group">
            @Html.LabelFor(m => m.EmailAddress, new { @class = "control-label col-xs-12 col-sm-4 col-md-3 col-lg-3" })
            <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", data_bind = "value: blockModel.emailAddress" })
            </div>
        </div>
    </div>
</div>

<script type="text/javascript"
        data-main="/Plugins/Widgets.Bootstrap3.FormBuilder/Scripts/main-built.js"
        src="/Plugins/Widgets.Bootstrap3.FormBuilder/Scripts/lib/require.js?v=3">
</script>
<script type="text/javascript">
    function stripHTML(html) {
        return $("<div/>").html(html).text();
    };

    var contentBlockModel = (function () {
        var f = {};
        f.updateModel = function () {
            viewModel.blockModel.htmlTemplate = ko.observable("");
            viewModel.blockModel.thankYouMessage = ko.observable("");
            viewModel.blockModel.redirectUrl = ko.observable("");
            viewModel.blockModel.emailAddress = ko.observable("");
            viewModel.blockModel.useAjax = ko.observable(false);

            var data = ko.mapping.fromJSON(viewModel.blockModel.blockValues());

            if (data) {
                if (data.HtmlTemplate) {
                    viewModel.blockModel.htmlTemplate(data.HtmlTemplate());
                }
                if (data.ThankYouMessage) {
                    viewModel.blockModel.thankYouMessage(data.ThankYouMessage());
                }
                if (data.RedirectUrl) {
                    viewModel.blockModel.redirectUrl(data.RedirectUrl());
                }
                if (data.EmailAddress) {
                    viewModel.blockModel.emailAddress(data.EmailAddress());
                }
                if (data.UseAjax) {
                    viewModel.blockModel.useAjax(data.UseAjax());
                }
            }

            viewModel.blockModel.tinyMCEConfig = koreDefaultTinyMCEConfig;
        };
        f.cleanUp = function () {
            delete viewModel.blockModel.htmlTemplate;
            delete viewModel.blockModel.thankYouMessage;
            delete viewModel.blockModel.redirectUrl;
            delete viewModel.blockModel.emailAddress;
            delete viewModel.blockModel.useAjax;
            delete viewModel.blockModel.tinyMCEConfig;
        };
        f.onBeforeSave = function () {

            var renderedForm = $('#render').val();
            viewModel.blockModel.htmlTemplate(renderedForm);

            var thankYouMessage = viewModel.blockModel.thankYouMessage();
            if (viewModel.blockModel.useAjax()) {
                thankYouMessage = stripHTML(thankYouMessage);
            }

            var data = {
                HtmlTemplate: viewModel.blockModel.htmlTemplate(),
                ThankYouMessage: thankYouMessage,
                RedirectUrl: viewModel.blockModel.redirectUrl(),
                EmailAddress: viewModel.blockModel.emailAddress(),
                UseAjax: viewModel.blockModel.useAjax()
            };

            viewModel.blockValues(ko.mapping.toJSON(data));
        };
        return f;
    })();
</script>