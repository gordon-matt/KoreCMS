@using Kore.Web.ContentManagement.Areas.Admin.Blog.ContentBlocks
@using WebEnumExtensions = Kore.Web.EnumExtensions

@model AllPostsBlock

<div id="block-content" class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="form-group">
            @Html.Label("FilterType", T(KoreCmsLocalizableStrings.ContentBlocks.AllPostsBlock.FilterType), new { @class = "control-label" })
            @Html.DropDownList(
                "FilterType",
                WebEnumExtensions.ToSelectList<FilterType>(),
                new { @class = "form-control", data_bind = "value: filterType" })
        </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" data-bind="visible: filterType() == 1">
        <div class="form-group">
            @Html.Label("CategoryId", T(KoreCmsLocalizableStrings.ContentBlocks.AllPostsBlock.CategoryId), new { @class = "control-label" })
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="kore-icon kore-icon-categories"></i>
                </span>
                @Html.KoreCMS().BlogCategoryDropDownList(
                    "CategoryId",
                    emptyText: string.Empty,
                    htmlAttributes: new { @class = "form-control", data_bind = "value: categoryId" })
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" data-bind="visible: filterType() == 2">
        <div class="form-group">
            @Html.Label("TagId", T(KoreCmsLocalizableStrings.ContentBlocks.AllPostsBlock.TagId), new { @class = "control-label" })
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="kore-icon kore-icon-tags"></i>
                </span>
                @Html.KoreCMS().BlogTagDropDownList(
                    "TagId",
                    emptyText: string.Empty,
                    htmlAttributes: new { @class = "form-control", data_bind = "value: tagId" })
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var contentBlockModel = (function () {
        var f = {};
        f.updateModel = function () {
            viewModel.filterType = ko.observable(0);
            viewModel.categoryId = ko.observable(null);
            viewModel.tagId = ko.observable(null);

            var data = ko.mapping.fromJSON(viewModel.blockValues());

            if (data) {
                if (data.FilterType) {
                    viewModel.filterType(data.FilterType());
                }
                if (data.CategoryId) {
                    viewModel.categoryId(data.CategoryId());
                }
                if (data.TagId) {
                    viewModel.tagId(data.TagId());
                }
            }

            viewModel.tinyMCEConfig = koreDefaultTinyMCEConfig;
        };
        f.cleanUp = function () {
            delete viewModel.filterType;
            delete viewModel.categoryId;
            delete viewModel.tagId;
        };
        f.onBeforeSave = function () {
            var data = {
                FilterType: viewModel.filterType(),
                CategoryId: viewModel.categoryId(),
                TagId: viewModel.tagId()
            };

            viewModel.blockValues(ko.mapping.toJSON(data));
        };
        return f;
    })();
</script>