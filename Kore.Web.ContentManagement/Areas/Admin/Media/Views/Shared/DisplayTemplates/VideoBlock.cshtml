@using Kore.Web.Mvc
@using Kore.Web.Mvc.Html
@using Kore.Web.ContentManagement.Areas.Admin.Media.ContentBlocks

@model VideoBlock

@switch (Model.Type)
{
    case VideoBlock.VideoType.Flash:
        {
            var item = new SourceListItem
            {
                Source = Model.Source
            };
            var sourceList = new SourceList(new[] { item });
            @Html.Html5().Media.Video(Model.ControlId, sourceList, ObjectType.Flash, null)
        }
        break;
    case VideoBlock.VideoType.Silverlight:
        {
            var item = new SourceListItem
            {
                Source = Model.Source
            };
            var sourceList = new SourceList(new[] { item });
            @Html.Html5().Media.Video(Model.ControlId, sourceList, ObjectType.Silverlight, null)
        }
        break;
    case VideoBlock.VideoType.Normal:
    default:
        @Html.Html5().Media.Video(Model.ControlId, Model.Source, T(KoreCmsLocalizableStrings.ContentBlocks.VideoBlock.VideoTagNotSupported).Text, Model.ShowControls, Model.AutoPlay, Model.Loop)
        break;
}