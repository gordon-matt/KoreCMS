@using Kore.Infrastructure
@using Kore.Web.Common
@using Kore.Web.Common.Html
@using Kore.Plugins.Ecommerce.Simple
@using Constants = Kore.Plugins.Ecommerce.Simple.Constants
@using LocalizableStrings = Kore.Plugins.Ecommerce.Simple.LocalizableStrings

@{
    Style.IncludeBundle("third-party/metro");

    var settings = EngineContext.Current.Resolve<StoreSettings>();
}

@using (var tiles = Html.KoreCommon().Metro().Begin(new Tiles()))
{
    using (var row = tiles.BeginTileRow())
    {
        using (var tile = row.BeginTile("#plugins/ecommerce/simple/categories", MetroColor.Lime))
        {
            <i class="kore-icon kore-icon-categories kore-icon-5x"></i>
            <h4>@T(LocalizableStrings.Categories)</h4>
        }
        if (!settings.CatalogMode)
        {
            using (var tile = row.BeginTile("#plugins/ecommerce/simple/orders"))
            {
                <i class="kore-icon kore-icon-orders kore-icon-5x"></i>
                <h4>@T(LocalizableStrings.Orders)</h4>
            }
        }
    }
}