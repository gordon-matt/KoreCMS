@model Kore.Indexing.SearchWidget

<form class="form-search" method="get" action="@Url.Action("Search", "Search", new { area = Kore.Indexing.Constants.Area })">
    <i class="kore-icon kore-icon-search"></i>
    <input type="text" class="search-query" name="q" value="{0}" placeholder="@T("Search")" />
    <button type="submit" class="btn btn-default">@T("Search")</button>
</form>