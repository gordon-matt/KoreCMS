@using Kore.Plugins.Messaging.Forums
@using Kore.Plugins.Messaging.Forums.Extensions
@using Kore.Plugins.Messaging.Forums.Models
@model ForumTopicPageModel

@{
    ViewBag.Title = Model.Subject;
}
<div class="page forum-topic-page">
    @*@Html.Action("ForumBreadcrumb", new { forumTopicId = Model.Id })*@
    @Html.Partial("_ForumHeader")
    <hr class="clearfix" />
    <div class="topic-name">
        <h1>@Model.Subject</h1>
    </div>
    <div class="topic-actions upper">
        <div class="actions">
            @if (Model.IsUserAllowedToEditTopic)
            {
                @Html.ActionLink(T(LocalizableStrings.EditTopic), "TopicEdit", new { id = Model.Id }, new { @class = "btn btn-default edit-topic-button" })
            }
            @if (Model.IsUserAllowedToDeleteTopic)
            {                
                @Html.ActionLink(T(LocalizableStrings.DeleteTopic), "TopicDelete", new { id = Model.Id }, new { onClick = string.Format("return confirm('{0}');", T("Common.AreYouSure").Text), @class = "btn btn-danger delete-topic-button" })
            }
            @if (Model.IsUserAllowedToMoveTopic)
            {
                @Html.ActionLink(T(LocalizableStrings.MoveTopic), "TopicMove", new { id = Model.Id }, new { @class = "btn btn-warning move-topic-button" })
            }
            @Html.ActionLink(T(LocalizableStrings.Reply), "PostCreate", new { id = Model.Id }, new { @class = "btn btn-primary reply-topic-button" })
            @if (Model.IsUserAllowedToSubscribe)
            {
                <a class="btn btn-success watch-topic-button" href="#" id="watch-topic-top">@Model.WatchTopicText</a>

                using (Script.AtFoot())
                {
                    <script type="text/javascript">
                        $(function () {
                            $('#watch-topic-top').click(function () {
                                $.ajax({
                                    cache: false,
                                    type: 'POST',
                                    url: '@Url.Action("TopicWatch", new { id = Model.Id })',
                                    dataType: 'json',
                                    success: function (data) {
                                        $('#watch-topic-top').text(data.Text);
                                        $('#watch-topic-bottom').text(data.Text);
                                    },
                                    error: function (xhr, ajaxOptions, thrownError) {
                                        alert('Failed to watch');
                                    }
                                });
                            });
                        });
                    </script>
                }
            }
        </div>
        @{
            var pager = Html.Pager(new PagerModel
            {
                PageSize = Model.PostsPageSize,
                TotalRecords = Model.PostsTotalRecords,
                PageIndex = Model.PostsPageIndex,
                ShowTotalSummary = false,
                RouteActionName = "Topic",
                UseRouteLinks = true,
                RouteValues = new RouteValues { id = Model.Id, slug = Model.SeName }
            });
        }
        @if (!MvcHtmlString.IsNullOrEmpty(pager))
        {
            <div class="pager upper">
                @pager
            </div>
        }
    </div>

    <table class="table table-bordered">
        @foreach (var post in Model.ForumPostModels)
        {
            Html.RenderPartial("_ForumPost", post);
        }
    </table>

    @*<div class="topic-posts">
        @foreach (var post in Model.ForumPostModels)
        {
            Html.RenderPartial("_ForumPost", post);
        }
    </div>*@

    <div class="topic-actions lower">
        <div class="actions">
            @Html.ActionLink(T(LocalizableStrings.Reply), "PostCreate", new { id = Model.Id }, new { @class = "btn btn-primary" })
            @if (Model.IsUserAllowedToSubscribe)
            {
                <a class="btn btn-success" href="#" id="watch-topic-bottom">@Model.WatchTopicText</a>
                
                using (Script.AtFoot())
                {
                    <script type="text/javascript">
                    $(function () {
                        $('#watch-topic-bottom').click(function () {
                            var postData = {};
                            addAntiForgeryToken(postData);

                            $.ajax({
                                cache: false,
                                type: 'POST',
                                url: '@Url.Action("TopicWatch", new { id = Model.Id })',
                                data: postData,
                                dataType: 'json',
                                success: function (data) {
                                    $('#watch-topic-top').text(data.Text);
                                    $('#watch-topic-bottom').text(data.Text);
                                },
                                error: function (xhr, ajaxOptions, thrownError) {
                                    alert('Failed to watch');
                                }
                            });
                        });
                    });
                    </script>
                }
            }
        </div>
        @if (!MvcHtmlString.IsNullOrEmpty(pager))
        {
            <div class="pager lower">
                @pager
            </div>
        }
    </div>
</div>
