@using Kore.Web
@using Kore.Web.Mvc.KoreUI

@{
    string rtlClass = IsRightToLeft ? "k-rtl" : string.Empty;
}

@Html.Hidden("GridPageSize", SiteSettings.DefaultGridPageSize)

<div id="grid-section" class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 @rtlClass">
        <div id="Grid"></div>
    </div>
</div>

<div id="form-section" class="row" style="display:none">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        @using (var panel = Html.KoreUI().Begin(new Panel(state: State.Primary)))
        {
            using (var header = panel.BeginHeader(T(KoreWebLocalizableStrings.General.Details))) { }
            using (var body = panel.BeginBody())
            {
                <form id="form-section-form" role="form">
                    <fieldset>
                        <legend id="form-section-legend"></legend>
                        <div class="form-group">
                            @Html.Label("Name", T(KoreWebLocalizableStrings.ScheduledTasks.Model.Name), new { @class = "control-label col-xs-12 col-sm-4 col-md-3 col-lg-3" })
                            <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                                <p class="form-control-static" data-bind="text: name"></p>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("Seconds", T(KoreWebLocalizableStrings.ScheduledTasks.Model.Seconds), new { @class = "control-label col-xs-12 col-sm-4 col-md-3 col-lg-3" })
                            <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="kore-icon kore-icon-schedule-tasks"></i>
                                    </span>
                                    @Html.TextBox("Seconds", null, new { @class = "form-control", data_bind = "value: seconds" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-4 col-md-3 col-lg-3"></label>
                            <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                                <div class="checkbox">
                                    <label>
                                        @Html.CheckBox("Enabled", new { data_bind = "checked: enabled" }) @T(KoreWebLocalizableStrings.ScheduledTasks.Model.Enabled)
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        @Html.CheckBox("StopOnError", new { data_bind = "checked: stopOnError" }) @T(KoreWebLocalizableStrings.ScheduledTasks.Model.StopOnError)
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group pull-right">
                                <button type="button" class="btn btn-default" data-bind="click: cancel">@T(KoreWebLocalizableStrings.General.Cancel)</button>
                                <button type="button" class="btn btn-primary" data-bind="click: save"><i class="kore-icon kore-icon-save"></i> @T(KoreWebLocalizableStrings.General.Save)</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            }
        }
    </article>
</div>