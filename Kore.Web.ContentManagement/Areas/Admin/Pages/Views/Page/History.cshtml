@using Kore.Web.ContentManagement
@using Kore.Web.ContentManagement.Areas.Admin.Pages.Domain
@using Kore.Web.ContentManagement.Extensions;

@{
    Layout = KoreWebConstants.DefaultAdminLayoutPath;
    
    Style.IncludeBundle("kendo-ui");

    Script.IncludeBundle("kendo-ui");
    Script.IncludeBundle("knockout");
    Script.IncludeBundle("knockout-mapping");
    Script.IncludeBundle("tinymce");
    Script.IncludeBundle("notify");

    Script.IncludeBundle("kore-cms/pages-history");

    Guid pageId = (Guid)ViewBag.PageId;

    string rtlClass = IsRightToLeft ? "k-rtl" : string.Empty;
}

<div id="grid-section" class="row">
    <div class="col-md-12 @rtlClass">
        <div id="Grid"></div>
    </div>
</div>

<div id="details-section" class="row" style="display:none">
    <article class="col-sm-12 col-md-12">
        <table class="table table-bordered table-condensed">
            <tbody>
                <tr>
                    <th>Page Type</th>
                    <td><span data-bind="html: pageTypeId"></span></td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td><span data-bind="html: name"></span></td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td><span data-bind="html: slug"></span></td>
                </tr>
                <tr>
                    <th>Enabled</th>
                    <td><span data-bind="html: isEnabled"></span></td>
                </tr>
                <tr>
                    <th>Order</th>
                    <td><span data-bind="html: order"></span></td>
                </tr>
                <tr>
                    <th>Show on Menus</th>
                    <td><span data-bind="html: showOnMenus"></span></td>
                </tr>
                <tr>
                    <th>Date Created (UTC)</th>
                    <td><span data-bind="html: dateCreatedUtc"></span></td>
                </tr>
                <tr>
                    <th>Date Modified (UTC)</th>
                    <td><span data-bind="html: dateModifiedUtc"></span></td>
                </tr>
                <tr>
                    <th>CultureCode</th>
                    <td><span data-bind="html: cultureCode"></span></td>
                </tr>
            </tbody>
        </table>
        <p>Fields</p>
        <div id="Fields" data-bind="html: fields"></div>

        <div class="pull-right">
            <button type="button" class="btn btn-default" data-bind="click: cancel">@T(KoreWebLocalizableStrings.General.Cancel)</button>
            <button type="button" class="btn btn-warning" data-bind="click: restore">@T(KoreCmsLocalizableStrings.Pages.RestoreVersion)</button>
        </div>
    </article>
</div>

@section scripts {
    <script type="text/javascript">
        var pageId = '@pageId';
        var gridPageSize = @SiteSettings.DefaultGridPageSize;
        var translations = {
            GetRecordError: '@T(KoreWebLocalizableStrings.Messages.GetRecordError).Text',
            PageHistoryRestoreError: '@T(KoreCmsLocalizableStrings.Pages.PageHistoryRestoreError).Text',
            PageHistoryRestoreSuccess: '@T(KoreCmsLocalizableStrings.Pages.PageHistoryRestoreSuccess).Text',
            View: '@T(KoreWebLocalizableStrings.General.View).Text'
        }
    </script>
}