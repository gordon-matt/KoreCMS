@using Kore.Infrastructure
@{
    Layout = null;
    Style.Include("css/bootstrap.min.css", true);
    Style.Include("css/font-awesome.min.css", true);
    Style.Include("css/prettyPhoto.css", true);
    Style.Include("css/price-range.css", true);
    Style.Include("css/animate.css", true);
    Style.Include("css/main.css", true);
    Style.Include("css/responsive.css", true);

    Script.Include("jquery.js", true, 0);
    Script.Include("bootstrap.min.js", true);
    Script.Include("jquery.scrollUp.min.js", true);
    Script.Include("price-range.js", true);
    Script.Include("jquery.prettyPhoto.js", true);
    Script.Include("main.js", true);

    string siteName = string.IsNullOrEmpty(SiteSettings.SiteName) ? "My Kore App" : SiteSettings.SiteName;

    string dir = IsRightToLeft ? "rtl" : string.Empty;
    string lang = WorkContext.CurrentCultureCode.LeftOf('-');

    if (IsRightToLeft)
    {
        Style.IncludeExternal("https://cdnjs.cloudflare.com/ajax/libs/bootstrap-rtl/3.2.0-rc2/css/bootstrap-rtl.min.css");
    }
}
