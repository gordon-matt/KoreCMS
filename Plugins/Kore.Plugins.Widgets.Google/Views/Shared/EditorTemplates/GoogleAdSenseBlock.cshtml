@using Kore.Plugins.Widgets.Google
@model Kore.Plugins.Widgets.Google.ContentBlocks.GoogleAdSenseBlock

<div id="block-content">
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
        <div class="form-group">
            @Html.LabelFor(m => m.AdClient, new { @class = "control-label col-xs-12 col-sm-4 col-md-3 col-lg-3" })
            <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                @Html.TextBoxFor(m => m.AdClient, new { @class = "form-control", data_bind = "value: blockModel.adClient" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.AdSlot, new { @class = "control-label col-xs-12 col-sm-4 col-md-3 col-lg-3" })
            <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                @Html.TextBoxFor(m => m.AdSlot, new { @class = "form-control", data_bind = "value: blockModel.adSlot" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-12 col-sm-4 col-md-3 col-lg-3"></label>
            <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(m => m.EnableLazyLoadAd, new { data_bind = "checked: blockModel.enableLazyLoadAd" }) @T(LocalizableStrings.ContentBlocks.AdSenseBlock.EnableLazyLoadAd)
                    </label>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
        <div class="form-group">
            @Html.LabelFor(m => m.Width, new { @class = "control-label col-xs-12 col-sm-4 col-md-3 col-lg-3" })
            <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                @Html.TextBoxFor(m => m.Width, new { @class = "form-control", data_bind = "value: blockModel.width" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Height, new { @class = "control-label col-xs-12 col-sm-4 col-md-3 col-lg-3" })
            <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                @Html.TextBoxFor(m => m.Height, new { @class = "form-control", data_bind = "value: blockModel.height" })
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var contentBlockModel = (function () {
        var f = {};
        f.updateModel = function () {
            viewModel.blockModel.adClient = ko.observable("");
            viewModel.blockModel.adSlot = ko.observable("");
            viewModel.blockModel.width = ko.observable(0);
            viewModel.blockModel.height = ko.observable(0);
            viewModel.blockModel.enableLazyLoadAd = ko.observable(false);

            var data = ko.mapping.fromJSON(viewModel.blockModel.blockValues());

            if (data) {
                if (data.AdClient) {
                    viewModel.blockModel.adClient(data.AdClient());
                }
                if (data.AdSlot) {
                    viewModel.blockModel.adSlot(data.AdSlot());
                }
                if (data.Width) {
                    viewModel.blockModel.width(data.Width());
                }
                if (data.Height) {
                    viewModel.blockModel.height(data.Height());
                }
                if (data.EnableLazyLoadAd) {
                    viewModel.blockModel.enableLazyLoadAd(data.EnableLazyLoadAd());
                }
            }
        };
        f.cleanUp = function () {
            delete viewModel.blockModel.adClient;
            delete viewModel.blockModel.adSlot;
            delete viewModel.blockModel.width;
            delete viewModel.blockModel.height;
            delete viewModel.blockModel.enableLazyLoadAd;
        };
        f.onBeforeSave = function () {
            var data = {
                AdClient: viewModel.blockModel.adClient(),
                AdSlot: viewModel.blockModel.adSlot(),
                Width: viewModel.blockModel.width(),
                Height: viewModel.blockModel.height(),
                EnableLazyLoadAd: viewModel.blockModel.enableLazyLoadAd()
            };

            viewModel.blockModel.blockValues(ko.mapping.toJSON(data));
        };
        return f;
    })();
</script>