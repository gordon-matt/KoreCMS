@using Kore.Web
@model Kore.Plugins.Indexing.Lucene.LuceneSearchBlock

@if (Model.RenderAsBootstrapNavbarForm)
{
    <form class="navbar-form navbar-left" role="search" method="get" action="@Url.Action("Search", "Search", new { area = string.Empty })">
        <div class="form-group">
            <input type="text" class="form-control" name="q" value="" placeholder="@T(KoreWebLocalizableStrings.General.Search)" />
        </div>
        <button type="submit" class="btn btn-default">@T(KoreWebLocalizableStrings.General.Search)</button>
    </form>
}
else
{
    using (Html.BeginForm("Search", "Search", new { area = string.Empty }, FormMethod.Get, new { @class = "form-search", role = "search" }))
    {
        <div class="input-group">
            <input type="text" class="form-control" name="q" value="" placeholder="@T(KoreWebLocalizableStrings.General.Search)" />
            <span class="input-group-btn">
                <button type="submit" class="btn btn-primary"><i class="kore-icon kore-icon-search"></i></button>
            </span>
        </div>
    }
}